<?xml version="1.0" encoding="utf-8"?>
<com.gridlayout.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gridlayout="http://schemas.android.com/apk/res/net.lp.hivawareness"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    gridlayout:columnCount="7"
    gridlayout:rowCount="4"    
    android:useDefaultMargins="true" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_column="3"
        android:layout_row="1"
        android:inputType="textPersonName"
        android:text="Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_column="3"
        android:layout_row="2"
        android:inputType="number"
        android:text="Age" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_column="3"
        android:layout_row="3" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_column="3"
        android:layout_row="4"
        android:entries="@array/gender"
        android:prompt="@string/gender2" />

    <Button
        android:id="@+id/button1"
        android:layout_column="3"
        android:layout_row="5"
        android:text="Generate" />

</com.gridlayout.GridLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.gridlayout.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gridlayout="http://schemas.android.com/apk/res/net.lp.hivawareness"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    gridlayout:columnCount="6"
    gridlayout:rowCount="4"
    android:useDefaultMargins="true" >
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_column="3"
    android:layout_row="1"
    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="2"
	        android:paddingLeft="10dip"
	        android:paddingRight="10dip"
	        android:paddingBottom="4dip"
	        android:paddingTop="4dip"
	        android:background="@drawable/number"
	        android:layout_weight="0" />
	    
	    <ImageView
	        android:id="@+id/android"
	        android:layout_width="50dip"
	        android:layout_height="match_parent"
	        android:src="@drawable/android_shame"
	        android:padding="2dip"
	        android:layout_weight="0"
	        android:layout_gravity="top" />
	    
	    <TextView
	        android:id="@+id/text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="5dip"
	        android:text="@string/start_advice"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:layout_weight="1" />
	
	</LinearLayout>


    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="match_parent"
        android:layout_column="3"
        android:layout_row="2"
        android:entries="@array/gender"
        android:prompt="@string/gender2" >
	    
        <requestFocus />
    </Spinner>

    <Spinner
        android:id="@+id/spinner_region"
        android:layout_width="match_parent"
        android:layout_column="3"
        android:layout_row="3"
        android:entries="@array/region"
        android:prompt="@string/region2" />
    
    <Button
        android:id="@+id/button1"
        android:layout_column="3"
        android:layout_row="4"
        android:text="Start" />

</com.gridlayout.GridLayout>
